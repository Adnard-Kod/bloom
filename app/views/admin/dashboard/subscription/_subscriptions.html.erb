<div id='content'>
  <div id='menus-component'>
    <div id="page-wrapper">

      <div class="container-fluid">

        <!-- Page Heading -->
        <div class="row">
          <div class="col-lg-12">
            <h1 class="page-header">
              Subscriptions
            </h1>
            <ol class="breadcrumb">
              <li class="active">
                <i class="fa fa-edit"></i> Subscriptions
              </li>
            </ol>
          </div>
        </div>
        <!-- /.row -->

        <div class="row">
          <div class="col-lg-12">

            <form role="form">

              <div class="form-group">
                <label>Create A New Subscription</label>
                <input class="form-control" placeholder="Name">
              </div>

              <div class="form-group">
                <label>Subscription Description</label>
                <textarea class="form-control" rows="3"></textarea>
              </div>

              <div class="form-group">
                <label>Subscription Price</label>
                <input class="form-control" placeholder="$0.00">
              </div>

              <div class="form-group">
                <label>Week Classifications</label>
                <label class="checkbox-inline">
                  <input type="checkbox">3
                </label>
                <label class="checkbox-inline">
                  <input type="checkbox">6
                </label>
                <label class="checkbox-inline">
                  <input type="checkbox">9
                </label>
                <label class="checkbox-inline">
                  <input type="checkbox">12
                </label>
              </div>

              <div class="form-group">
                <label>Meal Classifications</label>
                <label class="checkbox-inline">
                  <input type="checkbox">6
                </label>
                <label class="checkbox-inline">
                  <input type="checkbox">8
                </label>
                <label class="checkbox-inline">
                  <input type="checkbox">10
                </label>
                <label class="checkbox-inline">
                  <input type="checkbox">12
                </label>
              </div>

              <button type="submit" class="btn btn-default">Create Subscription</button>
              <button type="reset" class="btn btn-default">Reset Subscription</button>

            </form>

          </div>
        </div>
        <!-- /.row -->

      </div>
      <!-- /.container-fluid -->

    </div>
    <!-- /#page-wrapper -->
  </div>
